  # boot.kernelModules = [ "kvm-intel" ];
  # boot.extraModulePackages = [ ];

  fileSystems."/" =
    { device = "nixos/root";
      fsType = "zfs";
    };

  fileSystems."/nix/store" =
    { device = "nixos/store";
      fsType = "zfs";
    };

  fileSystems."/home" =
    { device = "nixos/home";
      fsType = "zfs";
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/BC75-DC98";
      fsType = "vfat";
      options = [ "fmask=0077" "dmask=0077" ];
    };

  fileSystems."/mnt/arch" =
    { device = "/dev/mapper/arch";
      fsType = "btrfs";
    };

